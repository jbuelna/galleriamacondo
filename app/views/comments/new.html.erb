<% form_for(@comment) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :painting_id %><br />
    <%= f.text_field :painting_id %>
  </p>
  <p>
    <%= f.label :artist_id %><br />
    <%= f.text_field :artist_id %>
  </p>
  <p>
    <%= f.label :body %><br />
